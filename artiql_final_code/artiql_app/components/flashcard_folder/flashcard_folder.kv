#:import FlashcardFolder components.flashcard_folder.flashcard_folder.FlashcardFolder
#:import SearchFlashcardFolder components.flashcard_folder.flashcard_folder.SearchFlashcardFolder
#:import SearchFlashcardFolderFlashcard components.flashcard_folder.flashcard_folder.SearchFlashcardFolderFlashcard
#:import FlashcardFolderFlashcard components.flashcard_folder.flashcard_folder.FlashcardFolderFlashcard
#:import RightCheckbox components.word_folder.word_folder.RightCheckbox

<FlashcardFolder>:
    text: root.name
    font_name: 'fonts/Helvetica'

    IconLeftWidget:
        icon: 'folder'

    RightCheckbox:
        id: right_checkbox
        opacity: 0
        disabled: True

<SearchFlashcardFolder>:
    text: root.name
    font_name: 'fonts/Helvetica'

    IconLeftWidget:
        icon: 'folder'

    IconRightWidget:
        icon: 'information-outline'
        on_release: root.show_info()

<FlashcardFolderFlashcard>:
    text: root.word
    font_name: 'fonts/Helvetica'

    RightCheckbox:
        id: right_checkbox
        opacity: 0
        disabled: True

<SearchFlashcardFolderFlashcard>:
    text: root.word
    font_name: 'fonts/Helvetica'

    IconRightWidget:
        icon: 'information-outline'
        on_release: root.show_info()
