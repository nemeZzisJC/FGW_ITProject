#:import ElementMainHeadingCommentImage components.element_main_heading_comment_image.element_main_heading_comment_image.ElementMainHeadingCommentImage
#:import H1Heading components.h1_heading.h1_heading.H1Heading
#:import ElementParagraph components.element_paragraph.element_paragraph.ElementParagraph

<ElementMainHeadingCommentImage>:
    id: main_heading
    size_hint_y: None
    adaptive_height: True
    orientation: 'vertical'
    spacing: '10dp'
    padding: [0, 0, 0, 10]

    MDLabel:
        id: source
        size_hint_x: 1
        pos_hint: {'top': 1}
        adaptive_height: True
        halign: 'left'
        text: root.source
        font_size: '16sp'
        font_name: 'fonts/Helvetica'

    H1Heading:
        id: main_heading_text

    MDLabel:
        id: author
        adaptive_height: True
        halign: 'left'
        text: root.date + ' | ' + root.author
        font_size: '16sp'
        font_name: 'fonts/Helvetica-light'

    ElementParagraph:
        id: comment
        text: root.comment
        font_name: 'fonts/Helvetica-Italic'

    AsyncImage:
        id: main_image
        source: root.image
        size_hint: (None, None)
        width: main_heading.width
        height: self.width / self.image_ratio

    MDLabel:
        id: main_image_source
        adaptive_height: True
        halign: 'left'
        text: root.image_source
        font_size: '14sp'
        font_name: 'fonts/Helvetica-light'
