#:import DialogShowFlashcardInfo components.dialog_show_flashcard_info.dialog_show_flashcard_info.DialogShowFlashcardInfo
#:import DialogShowFlashcardInfoContent components.dialog_show_flashcard_info.dialog_show_flashcard_info.DialogShowFlashcardInfoContent


<DialogShowFlashcardInfo>:
    title: "Create a flashcard"
    title_font_name: 'fonts/Helvetica-Bold'
    title_color: (0, 0, 0, 1)
    auto_dismiss: False
    buttons: root.buttons
    content_cls: root.content_cls


<DialogShowFlashcardInfoContent>:
    orientation: 'vertical'
    pos_hint: {'top': 1}
    size_hint_y: None
    adaptive_height: True
    spacing: '10dp'
    padding: [10, 0, 10, 30]

    MDLabel:
        adaptive_height: True
        text: 'Word or phrase'
        font_name: 'fonts/Helvetica-Bold'
        font_size: '18sp'
        theme_text_color: 'Custom'
        text_color: 'black'

    MDLabel:
        text: root.word
        font_name: 'fonts/Helvetica'
        adaptive_height: True
        theme_text_color: 'Custom'
        text_color: 'black'

    MDLabel:
        text: 'Definition'
        font_name: 'fonts/Helvetica-Bold'
        font_size: '18sp'
        adaptive_height: True
        theme_text_color: 'Custom'
        text_color: 'black'

    MDBoxLayout:
        adaptive_height: True

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 1
                rounded_rectangle: self.x, self.y, self.width, self.height, 0, 0, 0, 0

        ScrollView:
            id: definition_scroll_view
            do_scroll_y: True
            do_scroll_x: False
            size_hint: (1, None)
            height: '150dp'
            bar_width: 0

            MDBoxLayout:
                id: definition_scroll_view_layout
                orientation: 'vertical'
                padding: 5
                adaptive_height: True

    MDLabel:
        text: "Translation"
        font_name: 'fonts/Helvetica-Bold'
        font_size: '18sp'
        adaptive_height: True
        theme_text_color: 'Custom'
        text_color: 'black'

    MDBoxLayout:
        adaptive_height: True

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 1
                rounded_rectangle: self.x, self.y, self.width, self.height, 0, 0, 0, 0

        ScrollView:
            id: translation_scroll_view
            do_scroll_y: True
            do_scroll_x: False
            size_hint: (1, None)
            height: '100dp'
            bar_width: 0

            MDBoxLayout:
                id: translation_scroll_view_layout
                orientation: 'vertical'
                padding: 5
                adaptive_height: True

    MDLabel:
        text: "Choose saving type:"
        font_name: 'fonts/Helvetica-Bold'
        font_size: '18sp'
        adaptive_height: True
        theme_text_color: 'Custom'
        text_color: 'black'

    MDBoxLayout:
        adaptive_height: True
        orientation: 'horizontal'
        spacing: '5dp'

        Check:
            id: type_1
            active: True

        MDLabel:
            text: 'Translation only'
            font_name: 'fonts/Helvetica'
            size_hint: None, None
            size: self.texture_size
            text_size: None, self.height
            theme_text_color: 'Custom'
            text_color: 'black'

    MDBoxLayout:
        adaptive_height: True
        orientation: 'horizontal'
        spacing: '5dp'

        Check:
            id: type_2

        MDLabel:
            text: 'Definition only'
            font_name: 'fonts/Helvetica'
            size_hint: None, None
            size: self.texture_size
            text_size: None, self.height
            theme_text_color: 'Custom'
            text_color: 'black'

    MDBoxLayout:
        adaptive_height: True
        orientation: 'horizontal'
        spacing: '5dp'

        Check:
            id: type_3

        MDLabel:
            text: 'Translation and definition'
            font_name: 'fonts/Helvetica'
            size_hint: None, None
            size: self.texture_size
            text_size: None, self.height
            theme_text_color: 'Custom'
            text_color: 'black'

<Check@MDCheckbox>:
    group: 'flashcard_type'
    size_hint: None, None
    size: dp(24), dp(24)
